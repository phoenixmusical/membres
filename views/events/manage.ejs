<% layout('layouts/main') -%>

<div class="btn-toolbar">
	<a href="events/create" class="btn btn-primary">Ajouter un évènement</a>
</div>

<table class="table">
	<thead>
		<tr>
			<th>Nom</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% models.forEach(function(model){ %>
			<tr>
				<td><%= model.name %></td>
				<td>
					<a class="btn btn-default" href="events/<%= model._id %>/update">Modifier</a>
					<a class="btn btn-default" href="events/<%= model._id %>/remove">Supprimer</a>
				</td>
			</tr>
		<% }); %>
	</tbody>
</table>